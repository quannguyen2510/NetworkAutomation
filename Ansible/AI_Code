---
- name: Show Interface Information on Routers
  hosts: all
  gather_facts: no
  tasks:
    - name: Get interface information from {{ hostvars[inventory_hostname]['ansible_hostname'] }}
      ios_interface_info:
        device: "{{ inventory_hostname }}"
        state: present
      register: output
      delegate_to: "{{ inventory_hostname }}"
      become: true

    - name: Print interface information
      debug:
        var: output.results
