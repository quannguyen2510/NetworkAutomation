---
- name: Show Interface Information on Routers
  hosts: all
  gather_facts: no
  tasks:
    - name: Display interface information on {{ hostvars[inventory_hostname]['ansible_hostname'] }}
      ios_command:
        commands: "show int"
        register: output
      delegate_to: "{{ inventory_hostname }}"
      become: true

    - name: Print interface information
      debug:
        var: output.stdout_lines
