---
- name: Config ipv4 l3_interfaces
  cisco.ios.ios_l3_interfaces:
    config:
    - name: "{{item.name}}"
      ipv4:
        - address: {{item.ip_address}}
  loop: "{{ l3_interface }}"
  when: item.dhcp_option == "no"

- name: config dhcp l3_interfaces
  cisco.ios.ios_l3_interfaces:
    config:  
    - name: "{{item.name}}"
      ipv4:
        - dhcp:
            enable: true
    state: merged
  loop: "{{ l3_interface }}"
  when: item.dhcp_option == "yes"