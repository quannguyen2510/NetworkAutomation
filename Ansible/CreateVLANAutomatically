---
- name: Create VLANs on AccessSwitches
  hosts: Switches
  gather_facts: false

  vars:
    vlan_names:
      - PC Kinh doanh
      - PC Ky Thuat
      - Printer
      # Add more VLAN names as needed

  tasks:
    - name: Create VLANs
      vars:
        vlan_id: "{{ loop.index * 10 }}"  # Generate VLAN ID dynamically
      cisco.ios.ios_vlans:
        config:
          - vlan_id: "{{ vlan_id }}"
            name: "{{ item }}"
            state: active
            shutdown: disabled
      loop: "{{ vlan_names }}"